{
  "name": "@gram-data/gram",
  "version": "0.4.0-alpha.9",
  "author": "Andreas Kollegger",
  "main": "dist/index.js",
  "module": "dist/gram.esm.js",
  "browser": "dist/gram.umd.production.min.js",
  "unpkg": "dist/gram.umd.production.min.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "run-s build:near lint:fix build:dist",
    "build:near": "nearleyc src/parse/gram.ne -o src/parse/gram-grammar.ts",
    "build:dist": "tsdx build --format umd,esm,cjs --tsconfig tsconfig.build.json",
    "test": "tsdx test",
    "lint": "tsdx lint src test",
    "lint:fix": "tsdx lint src --fix",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "build:demo": "shx cp dist/gram.umd.development.* ./public",
    "demo:parcel": "parcel ./public/index.html --open",
    "demo:sirv": "sirv ./public/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/gram.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/gram.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "husky": "^4.3.6",
    "nearley": "^2.20.1",
    "parcel-bundler": "^1.12.4",
    "shx": "^0.3.3",
    "sirv-cli": "^1.0.10",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@gram-data/gram-ast": "^0.4.0-alpha.9",
    "@gram-data/gram-builder": "^0.4.0-alpha.9",
    "@gram-data/gram-identity": "^0.4.0-alpha.9",
    "@gram-data/gram-ops": "^0.4.0-alpha.9",
    "@gram-data/gram-preset-basic": "^0.4.0-alpha.9",
    "@gram-data/gram-stringify": "^0.4.0-alpha.9",
    "@gram-data/gram-value": "^0.4.0-alpha.9",
    "moo": "^0.5.1",
    "unified": "^9.2.0",
    "vfile": "^4.2.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
